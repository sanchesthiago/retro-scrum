{
  "name": "easy-retro-combined-server",
  "version": "1.0.0",
  "type": "commonjs",
  "description": "Servidor combinado Angular + WebSocket",
  "main": "combined-server.js",
  "scripts": {
    "start": "node combined-server.js",
    "debug:structure": "echo '=== ESTRUTURA ===' && pwd && ls -la && echo '=== DIST ===' && ls -la ../dist/ || echo 'No dist folder'",
    "postinstall": "echo 'Backend dependencies installed'",
    "dev": "set NODE_ENV=development&& node combined-server.js",
    "build-and-start": "cd .. && ng build && NODE_ENV=production node combined-server.js",
    "debug:files": "find /app -name \"index.html\" -type f"
  },
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.14.2"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "keywords": ["retrospective", "websocket", "angular"],
  "author": "Seu Time",
  "license": "MIT"
}
