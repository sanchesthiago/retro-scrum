{
  "name": "retro-scrum",
  "version": "0.0.0",
  "type": "commonjs",
  "scripts": {
    "ng": "ng",
    "start": "bash start.sh",
    "build": "ng build --configuration=production",
    "build:verbose": "ng build --configuration=production && echo '=== VERIFICAÇÃO DO BUILD ===' && ls -la dist/retro-scrum/ && echo '--- BROWSER ---' && ls -la dist/retro-scrum/browser/ | head -10",
    "dev:frontend": "ng serve",
    "dev:backend": "cd backend && npm run dev",
    "install:all": "npm install && cd combined-server && npm install"
  },
  "keywords": ["retrospective", "websocket", "angular"],
  "author": "Seu Nome",
  "license": "MIT",
  "engines": {
    "node": "22.20.0"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/platform-browser": "^20.3.0",
    "@angular/router": "^20.3.0",
    "concurrently": "^9.2.1",
    "postcss": "^8.5.6",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.6",
    "@angular/cli": "^20.3.6",
    "@angular/compiler-cli": "^20.3.0",
    "@types/jasmine": "~5.1.0",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.9.2"
  }
}
